---
export interface Props {
  title: string
  subtitle: string
  bodyText?: string
  ctaText?: string
  ctaLink?: string
  class?: string
}

const { title, subtitle, bodyText, ctaText, ctaLink, class: className } = Astro.props
---

<div class:list={['text-content-container', className]}>
  <h2>{title}</h2>
  <p>{subtitle}</p>
  <p>{bodyText}</p>
  <a class="site-cta" href={ctaLink}>{ctaText}</a>
</div>

<style>
  .text-content-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    max-width: 600px;
    margin: 0 auto var(--section-spacing-large);
    text-align: center;
  }

  .text-content-container h2 {
    font-family: var(--font-body);
    font-size: clamp(var(--size-xs), 2vw, var(--size-sm));
    letter-spacing: 0.25rem;
    text-transform: uppercase;
  }

  .text-content-container p:first-of-type {
    font-family: var(--font-heading);
    font-size: clamp(var(--size-lg), 5vw, var(--size-xl));
  }

  .text-content-container .site-cta {
    margin-top: 1rem;
  }
</style>
