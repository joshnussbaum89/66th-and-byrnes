---
import { Picture } from 'astro:assets'
import carouselOne from '../assets/1.png'
import carouselFour from '../assets/4.png'
import carouselFive from '../assets/5.png'

export interface Props {
  class?: string
}

const { class: className } = Astro.props
---

<div class:list={[className, 'carousel']}>
  <Picture
    class="carousel-image active"
    src={carouselOne}
    formats={['avif', 'webp']}
    data-image="1"
    loading="eager"
    alt=""
  />
  <Picture
    class="carousel-image"
    src={carouselFour}
    formats={['avif', 'webp']}
    data-image="2"
    loading="eager"
    alt=""
  />
  <Picture
    class="carousel-image"
    src={carouselFive}
    formats={['avif', 'webp']}
    data-image="3"
    loading="eager"
    alt=""
  />
  <div class="overlay">
    <div class="overlay-content">
      <p>Make Your Impact</p>
      <h1>66th & Byrnes</h1>
      <p>Elevate Your Brand with Influencer Magic and Event Excellence</p>
    </div>
  </div>
</div>

<style>
  .carousel,
  .carousel-image {
    border-radius: var(--border-radius-card);
  }

  .carousel {
    position: relative;
    width: 100%;
    height: 65vh;
    max-height: 600px;
    overflow: hidden;
  }

  .carousel-image {
    position: absolute;
    top: 0;
    object-fit: cover;
    height: 100%;
    opacity: 0;
    transition: all var(--transition-long);

    &.active {
      opacity: 1;
    }
  }

  .overlay {
    position: absolute;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 0.2) 0%,
      rgba(0, 0, 0, 0.4) 50%,
      rgba(0, 0, 0, 0.2) 100%
    );

    & .overlay-content {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      width: 100%%;
      max-width: 500px;
      color: var(--color-white);

      & p:first-of-type {
        font-size: clamp(var(--size-xs), 2vw, var(--size-sm));
        letter-spacing: var(--letter-spacing-large);
        text-transform: uppercase;
      }

      & p:last-of-type {
        max-width: 410px;

        @media (min-width: 768px) {
          max-width: 450px;
        }
      }
    }
  }
</style>

<script>
  // Rotate through images
  setInterval(() => {
    const allImages = document.querySelectorAll('.carousel-image')
    const activeImage = document.querySelector('.carousel-image.active')
    const activeImageNumber = parseInt(activeImage?.getAttribute('data-image') || '1')
    const nextImageNumber = activeImageNumber === allImages.length ? 1 : activeImageNumber + 1
    const nextImage = document.querySelector(`.carousel-image[data-image="${nextImageNumber}"]`)

    activeImage?.classList.remove('active')
    nextImage?.classList.add('active')
  }, 4000)
</script>
