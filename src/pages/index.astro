---
import Layout from '../layouts/Layout.astro'
import Carousel from '../components/Carousel.astro'
import Marquee from '../components/Marquee.astro'
import Vision from '../components/pages/home/Vision.astro'
import Services from '../components/pages/home/Services.astro'
import FeaturedWork from '../components/pages/home/FeaturedWork.astro'
import Contact from '../components/Contact.astro'
---

<Layout title="66th & Byrnes">
  <header>
    <Carousel class="carousel" />
  </header>
  <main>
    <Marquee />
    <Vision />
    <Services />
    <FeaturedWork />
    <Contact />
  </main>
</Layout>

<style>
  header {
    max-width: var(--max-width);
    padding-bottom: 0;
  }

  main {
    padding-top: 0;
  }
</style>
